            </LinearLayout>

            <LinearLayout
                android:id="@+id/TenseLayout13"
                style="@style/VerbCharacteristicsDisplayLinearLayout">

                <TextView
                    android:id="@+id/Tense13"
                    style="@style/VerbCharacteristicsDisplayLabel"/>

                <TextView
                    android:id="@+id/Tense13_Result"
                    style="@style/VerbCharacteristicsDisplayResult"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>