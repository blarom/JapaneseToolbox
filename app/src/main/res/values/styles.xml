    <style name="VerbCharacteristicsDisplayLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="VerbCharacteristicsDisplayLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:text">@string/NoText</item>
    </style>
    <style name="VerbCharacteristicsDisplayResult">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:text">@string/NoText</item>
    </style>

    <style name="AboutTextViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">?attr/colorAccentDark</item>
        <item name="android:textSize">@dimen/AboutTextViewSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="AboutTextViewItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">@color/colorAccent</item>
        <item name="android:textSize">@dimen/AboutTextViewSubtextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="AboutTextViewItemParagraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:text">@color/colorAccentLight</item>
        <item name="android:textSize">@dimen/AboutTextViewSubtextSize</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="SearchByRadicalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@color/colorPrimaryLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="SearchByRadicalDialogTextStyle" parent="SearchByRadicalTextStyle" >
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SearchByRadicalElementStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="DecomposeValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|start</item>
        <item name="android:text">@color/Purple</item>
    </style>

    <style name="DecomposeTitleStyle" parent="DecomposeValueStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DecomposeTopRowTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@color/Blue</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
