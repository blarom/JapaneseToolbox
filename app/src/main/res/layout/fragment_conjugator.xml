<android.support.constraint.ConstraintLayout
    android:id="@+id/fragment_verbmodule"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:id="@+id/verb_chooser_spinner"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="0dp"
        android:singleLine="false"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/verb_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#BFFFFFFF"
        android:text="@string/verbHint"/>

    <ProgressBar
        android:id="@+id/verb_results_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <ScrollView
        android:id="@+id/conjugations_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verb_chooser_spinner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:background="#BFFFFFFF"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/conjugations_chooser_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="8dp"
                android:gravity="top|start"
                android:singleLine="false"/>

            <RadioGroup
                android:id="@+id/radio_romaji_or_kanji"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_Romaji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/Romaji"/>

                <RadioButton
                    android:id="@+id/radio_Kanji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/Kanji"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/TenseLayout0"
                style="@style/VerbCharacteristicsDisplayLinearLayout">

                <TextView
                    android:id="@+id/Tense0"
                    style="@style/VerbCharacteristicsDisplayLabel"/>

                <TextView
                    android:id="@+id/Tense0_Result"
                    style="@style/VerbCharacteristicsDisplayResult"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TenseLayout1"
