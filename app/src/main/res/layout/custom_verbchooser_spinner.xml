<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
    	android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
	        android:id="@+id/verbchooser_Prep"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginStart="2dp"
	        android:text="@string/Kanji"
	        android:textColor="@color/textColorConjugatorVerbChooserPreposition"
	        android:textSize="18sp"
	        android:textStyle="bold" />
        
        <TextView
	        android:id="@+id/verbchooser_Kanji_and_ustem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginStart="0dp"
	        android:text="@string/Kanji"
	        android:textColor="@color/textColorConjugatorVerbChooserKanjiRomaji"
	        android:textSize="18sp"
	        android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/verbchooser_Characteristics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="16sp"
        android:text="@string/English"
        android:textColor="@color/textColorConjugatorVerbChooserCharacteristics" />

    <TextView
        android:id="@+id/verbchooser_EnglishMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:text="@string/English"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="@color/textColorConjugatorVerbChooserMeaning" />

</LinearLayout>
