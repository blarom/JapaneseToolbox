<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_grammarmodule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/RadicalDecomp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/RadicalDecomp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/decompositionsHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DecompositionsHint"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:alpha="0.9"
        android:layout_below="@+id/RadicalDecomp"
        android:background="#BFFFFFFF" />

    <ScrollView
        android:id="@+id/decompositionScrollView"
        android:layout_below="@+id/decompositionsHint"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/decompositionsHint">

        <LinearLayout
            android:id="@+id/overall_block_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>


</RelativeLayout>